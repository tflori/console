{
    "name": "tflori/hugga",
    "description": "library for console applications with input and output handling",
    "license": "MIT",
    "suggest": {
        "ext-posix": "*"
    },
    "require": {
        "php": "^7.1",
        "ext-mbstring": "*",
        "psr/log": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Hugga\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^7.2",
        "mockery/mockery": "^1.1",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "autoload-dev": {
        "psr-4": {
            "Hugga\\Test\\": "tests"
        }
    },
    "scripts": {
        "code-style": "phpcs --standard=PSR2 src && phpcs --standard=PSR2 --ignore=example tests"
    }
}
